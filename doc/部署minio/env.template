# MinIO 环境配置模板
# 复制此文件为 .env 并根据需要修改配置

# MinIO 服务配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# 数据目录配置
MINIO_DATA_DIR=/Volumes/data/minio
MINIO_CONFIG_DIR=/Volumes/data/minio/config
MINIO_MC_DIR=/Volumes/data/minio/mc

# 端口配置
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# 时区配置
TZ=Asia/Shanghai

# 日志级别
MINIO_LOG_LEVEL=info

# 资源限制
MINIO_MEMORY_LIMIT=1G
MINIO_CPU_LIMIT=0.5
MINIO_MEMORY_RESERVATION=512M
MINIO_CPU_RESERVATION=0.25

# 网络配置
MINIO_NETWORK_NAME=minio-network

# 健康检查配置
MINIO_HEALTH_CHECK_INTERVAL=30s
MINIO_HEALTH_CHECK_TIMEOUT=20s
MINIO_HEALTH_CHECK_RETRIES=3
MINIO_HEALTH_CHECK_START_PERIOD=40s 